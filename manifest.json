{
    "manifest_version": 3,
    "name": "Nome dell'estensione",
    "version": "1.0",
    "description": "Descrizione dell'estensione",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ] 

}
